---
import Layout from '../../layouts/Layout.astro';
import Navigation from '../../components/Site/Navigation';
import Footer from '../../components/Site/Footer';
// import LevelsDiagram from '../../components/levelsDiagram';
import React from 'react';
import { Image } from 'astro:assets';
import inspectrLevels from '../../assets/inspectr-levels.png';

const useCaseModules = await Astro.glob('./level-*.astro');
const useCases = useCaseModules
  .map(({ meta }) => meta)
  .sort((a, b) => a.level - b.level);
---

<Layout
  title="Use Cases - Levels of API & Webhook Observability | Inspectr"
  description="Explore Inspectr use cases from first-request capture to full observability, automation, and AI assistance."
  keywords="Inspectr use cases, API observability levels, webhook debugging use cases, API inspection workflows"
  ogTitle="Inspectr Use Cases | Levels of API & Webhook Observability"
  ogDescription="Explore Inspectr use cases from first-request capture to full observability, automation, and AI assistance."
>
  <Navigation client:load />
  <main class="mt-20">
    <section class="bg-gradient-to-b from-brand-dark/80 to-black pt-16 pb-8">
      <div class="max-w-5xl mx-auto px-4 text-center space-y-6">
        <!--<p class="uppercase tracking-[0.3em] text-xs text-brand-secondary/70">-->
        <!--  From First Request to Full Observability-->
        <!--</p>-->
        <!--<h1 class="text-4xl sm:text-5xl font-bold text-balance">-->
        <!--  Inspectr helps teams move from "I just need to see what's hitting my service" to "we operate-->
        <!--  our APIs with confidence."-->
        <!--</h1>-->
        <h1 class="text-4xl md:text-5xl font-bold text-gradient mb-6 md:leading-[1.2]">
          From First Request to Full Observability
        </h1>
        <p class="text-xl md:text-2xl text-gray-400 max-w-3xl mx-auto mb-4">
          Inspectr evolves with your workflow.
        </p>
        <p class="text-lg text-gray-400 max-w-3xl mx-auto mb-4">
          Start by catching requests, then level up with automation, insights and AI assistance.
        </p>
      </div>
    </section>

    <!--<LevelsDiagram />-->

    <!--<section class="bg-black/60">-->
    <section class="bg-gradient-to-b from-black/80 via-white/10 to-black/60">
      <div class="mx-auto max-w-4xl px-4">
        <div
          class="
            relative
            rounded-3xl
            bg-gradient-to-br
            from-white
            via-white/95
            to-white/90
            shadow-2xl
            ring-1 ring-white/10
          "
        >
          <Image
            src={inspectrLevels}
            alt="The 9 Levels of API & Webhook Observability with Inspectr"
            class="w-full h-auto rounded-xl"
            loading="eager"
          />
        </div>
      </div>
    </section>

    <section class="py-10 bg-black/60">
      <div class="max-w-7xl mx-auto px-4 space-y-12">
        <p class="text-lg text-gray-300 text-center ">
          Explore the use cases below, each solving a concrete developer pain.
          <!--, and each one can be adopted on its own.-->
        </p>
        <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
          {useCases.map((useCase) => (
            <a
              href={`/use-cases/${useCase.slug}/`}
              class="group flex flex-col justify-between rounded-2xl border border-gray-800 bg-black/70 p-6 transition-transform transition-colors hover:-translate-y-1 hover:border-brand-primary/70 hover:bg-black"
            >
              <div class="space-y-4">
                <span
                  class="inline-flex items-center gap-2 rounded-full border border-brand-primary/40 bg-brand-primary/10 px-3 py-1 text-xs font-semibold uppercase tracking-wide text-brand-primary">
                  Level {useCase.level}
                </span>
                <h2 class="text-2xl font-semibold leading-tight text-white group-hover:text-brand-primary">
                  {useCase.title}
                </h2>
                <p class="text-sm text-gray-400">{useCase.excerpt}</p>
              </div>
              <div class="mt-6 flex items-center justify-between text-sm font-semibold text-brand-secondary">
                <span>Explore level</span>
                <span aria-hidden="true" class="transition-transform group-hover:translate-x-1">
                  â†’
                </span>
              </div>
            </a>
          ))}
        </div>
      </div>
    </section>
  </main>
  <Footer />
</Layout>
