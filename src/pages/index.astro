---
import Layout from '../layouts/Layout.astro';
// import App from '../App.tsx';
import Navigation from '../components/Site/Navigation';
import Hero from '../components/Site/Hero';
import Features from '../components/SectionFeatures';
import GettingStarted from '../components/SectionGettingStarted';
import TechStacks from '../components/SectionTechStacks';
import UseCases from '../components/SectionUseCases';
import Footer from '../components/Site/Footer';
import UseCaseLevels from '../components/SectionUseLevels';

const useCaseModules = await Astro.glob('./use-cases/level-*.astro');
const useCases = useCaseModules
	.map(({ meta }) => ({
		slug: meta.slug,
		level: meta.level,
		title: meta.title,
		excerpt: meta.excerpt,
	}))
---

<Layout
  title="Inspectr - Simplifying API and Webhook debugging!"
  description="Simplifying API and Webhook Debugging. Capture real-time traffic, inspect requests, and expose local APIs in seconds."
  keywords="Inspectr, API debugging, Webhook debugging, Inspectr.dev, API inspection, request monitoring, API proxy, HTTP proxy tool, OpenAPI mock responses, request replay"
  ogTitle="Inspectr â€“ API and Webhook Inspection & Debugging Tool"
  ogDescription="Capture and inspect API requests and webhook events in real-time using Inspectr. Simplifying API & Webhook Debugging."
>
  <Navigation client:load />
  <Hero />
  <Features />
  <GettingStarted />
  <TechStacks />
  <UseCases />
  <UseCaseLevels useCases={useCases} />
  <Footer />
</Layout>
